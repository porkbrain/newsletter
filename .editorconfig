root = true

[*]
charset = utf-8
indent_style = space
insert_final_newline = true
trim_trailing_whitespace = true
max_line_length = 80

[*.rs]
indent_size = 4
end_of_line = lf

[*.json]
indent_size = 4
end_of_line = lf

[*.ts]
indent_size = 2
end_of_line = lf

[*.js]
indent_size = 2
end_of_line = lf

[*.yml]
indent_size = 2
end_of_line = lf
